---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
				height: 360px;
				object-fit: cover;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.4em;
				margin-top: 0.5em;
				justify-content: inherit;
			}
			.tag {
				font-size: 0.75em;
				padding: 0.25em 0.6em;
				background: linear-gradient(135deg, rgba(var(--accent-rgb, 35, 55, 255), 0.1), rgba(var(--accent-rgb, 35, 55, 255), 0.05));
				color: var(--accent);
				border-radius: 12px;
				border: 1px solid rgba(var(--accent-rgb, 35, 55, 255), 0.2);
				white-space: nowrap;
			}
			ul li.old-post .tag {
				background: rgba(var(--gray), 0.1);
				color: rgb(var(--gray));
				border-color: rgba(var(--gray), 0.2);
			}
			.legacy-badge {
				display: inline-block;
				font-size: 0.7em;
				padding: 0.2em 0.5em;
				background-color: rgb(var(--gray-light));
				color: rgb(var(--gray));
				border-radius: 4px;
				margin-left: 0.5em;
				vertical-align: middle;
			}
			ul li.old-post {
				opacity: 0.7;
			}
			ul li.old-post img {
				filter: grayscale(30%);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul li.old-post a:hover {
				opacity: 1;
			}
			ul li.old-post a:hover img {
				filter: grayscale(0%);
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li class={post.data.old ? 'old-post' : ''}>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											width={480}
											height={240}
											src={post.data.heroImage}
											alt=""
											loading="lazy"
											decoding="async"
											transition:name={`hero-${post.data.title}`}
										/>
									)}
									<h4 class="title" transition:name={`title-${post.data.title}`}>
										{post.data.title}
										{post.data.old && <span class="legacy-badge">Legacy</span>}
									</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.tags && post.data.tags.length > 0 && (
										<div class="tags">
											{post.data.tags.map((tag) => (
												<span class="tag">{tag}</span>
											))}
										</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
